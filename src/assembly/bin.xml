<assembly>
  <id>bin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>jcaptcha/LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>src/assembly/README.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>   
  </files>
  <fileSets>
    <fileSet>
      <directory>jcaptcha/target</directory>
      <outputDirectory>/</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <includes>
        <include>jcaptcha-*-all.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
      <useDefaultExcludes>true</useDefaultExcludes>
      <includes>
        <include>fisheyebackgrounds/*</include>
        <include>gimpybackgrounds/*</include>
      </includes>
    </fileSet>    
    <fileSet>
      <directory>site-deploy</directory>
      <outputDirectory>/docs/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>samples</directory>
      <outputDirectory>/samples/</outputDirectory>
      <!-- useDefaultExcludes>true</useDefaultExcludes -->
      <excludes>
        <exclude>.svn</exclude>
      </excludes>
    </fileSet>        
  </fileSets>
  <moduleSets>
    <moduleSet>
      <includes>
        <include>com.github.albfernandez:jcaptcha-extension-buffered-engine</include>
        <include>com.github.albfernandez:jcaptcha-extension-jbosscache-store</include>
        <include>com.github.albfernandez:jcaptcha-extension-sound-freetts</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>extensions/</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
    <moduleSet>
      <includes>
        <include>com.github.albfernandez:jcaptcha-integration-simple-servlet</include>
      </includes>
      <binaries>
        <includeDependencies>false</includeDependencies>
        <outputDirectory>integrations/</outputDirectory>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>  
</assembly>
